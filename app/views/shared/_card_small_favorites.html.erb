<% favoriti = favorite.itinerary %>
<div>
  <%= render 'shared/card', itinerary: favoriti  %>
</div>

<div class="d-flex justify-content-around mt-3" style="width: 300px; margin: 0 auto">
  <div class="d-flex flex-column">
    <i class="fas fa-minus" style="display: inline-block; margin: 0 auto"></i>
    <%= link_to "Favoris", itinerary_favorite_path(favoriti.id, favorite.id), method: "delete" %>
  </div>
  <div class="d-flex flex-column">
    <i class="fas fa-share-alt" style="display: inline-block; margin: 0 auto"></i>

    <% body = "#{current_user.username} a partagé un itinéraire Safe Powder Rides avec vous \n Vous pouvez le consulter au lien suivant" %>
    <%= mail_to "", "Partager", subject: "#{current_user.username} a partagé un itinéraire Safe Powder Rides avec vous", body: body %>
  </div>
  <div class="d-flex flex-column">
    <i class="fas fa-cloud-download-alt" style="display: inline-block; margin: 0 auto"></i>
    <p>Télécharger</p>
  </div>
</div>
