

<h1><%= @itinerary.name %></h1>
 
   
  <%= @itinerary.name %>
  <%= @itinerary.description %>
  <%= @itinerary.duration %>
  <%= @itinerary.elevation %>
  <%= @itinerary.departure %>
  <%= @itinerary.arrival %>
  <%= @itinerary.ascent_difficulty %>
  <%= @itinerary.ski_difficulty %>

   <%= link_to "Back to all itineraries", itineraries_path %>


<%
array = []
Coordinate.where(itinerary_id: @itinerary.id).each do |coordinate|
	if coordinate.color
		array << [coordinate.order, coordinate.longitude, coordinate.latitude, coordinate.color]
	else
		array << [coordinate.order, coordinate.longitude, coordinate.latitude]
	end
end
array = array.sort_by { |coordinate| coordinate[0] }
%>  
<div
  id="map"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div id="hidden" data-waypoints = "<%= array %>" ></div>