
<style>
  #menu {
  background: #fff;
  position: absolute;
  z-index: 1;
  top: 10px;
  right: 10px;
  border-radius: 3px;
  width: 120px;
  border: 1px solid rgba(0, 0, 0, 0.4);
  font-family: 'Open Sans', sans-serif;
  }

  #menu a {
  font-size: 13px;
  color: #404040;
  display: block;
  margin: 0;
  padding: 0;
  padding: 10px;
  text-decoration: none;
  border-bottom: 1px solid rgba(0, 0, 0, 0.25);
  text-align: center;
  }

  #menu a:last-child {
  border: none;
  }

  #menu a:hover {
  background-color: #f8f8f8;
  color: #404040;
  }

  #menu a.active {
  background-color: #3887be;
  color: #ffffff;
  }

  #menu a.active:hover {
  background: #3074a4;
  }
</style>

<div id="carouselExampleControls" class="carousel slide" data-touch="false" data-ride="carousel" data-interval="false">
  <div class="carousel-inner">
    <nav id="menu"></nav>
    <div
    class="carousel-item active map"
    id="map"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

  <% @itinerary.photos.each do |photo| %>
    <div class="carousel-item">
      <%= cl_image_tag photo.key, class: "map"%>
    </div>
  <% end %>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
<h1 class="text-center"><%= @itinerary.name %></h1>
<div class="d-flex align-items-center" style="height: 40px;">
  <h6>Niveau de risque</h6>
  <div class="ml-2" style="position: relative; background-color: <%= @bera_color %>; border-radius: 50%; width: 40px; height: 40px">
    <p class="text-center" style="font-size: 30px; position: absolute;left: 12px; top: -5px"><%= @bera.risk_max %></p>
  </div>
</div>

<h5>Données principales</h5>

<div style="border: 3px solid #eee;" class="p-1">

  <div class="container">
    <div class="row">
      <div class="col-7">
        <h6>Massif</h6>
      </div>
      <div class="col-5">
        <p><%= @itinerary.mountain.name %></p>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-7">
        <h6>Dénivelé</h6>
      </div>
      <div class="col-5">
        <p><%= @itinerary.elevation %></p>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-7">
        <h6>Départ</h6>
      </div>
      <div class="col-5">
        <p><%= @itinerary.departure %></p>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-7">
        <h6>Arrivée</h6>
      </div>
      <div class="col-5">
        <p><%= @itinerary.arrival %></p>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-7">
        <%= link_to concept_path(anchor: 'difficulty') do %>
          <h6>Difficulté de montée</h6>
        <% end %>
      </div>
      <div class="col-5">
        <p><%= @itinerary.ascent_difficulty %></p>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-7">
        <%= link_to concept_path(anchor: 'difficulty')  do %>
          <h6>Difficulté ski</h6>
        <% end %>
      </div>
      <div class="col-5">
        <p><%= @itinerary.ski_difficulty %></p>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-7">
        <h6>Durée</h6>
      </div>
      <div class="col-5">
        <p><%= @itinerary.duration %>h</p>
      </div>
    </div>
  </div>

</div>

<h5 class="mt-2">Description</h5>

<div style="border: 3px solid #eee" class="p-1 mt-1">

 <%= @itinerary.description %>

</div>

<div class="d-flex justify-content-around mt-3" style="width: 300px; margin: 0 auto">
  <div class="d-flex flex-column">
    <i class="fas fa-plus" style="display: inline-block; margin: 0 auto"></i>
    <p>Favoris</p>
  </div>
  <div class="d-flex flex-column">
    <i class="fas fa-share-alt" style="display: inline-block; margin: 0 auto"></i>
    <p>Partager</p>
  </div>
  <div class="d-flex flex-column">
    <i class="fas fa-cloud-download-alt" style="display: inline-block; margin: 0 auto"></i>
    <p>Télécharger</p>
  </div>
</div>

<%= link_to "Retour aux itinéraires", itineraries_path, class: "btn btn-primary w-100 mb-2" %>

</div>
<div id="hidden" data-waypoints = "<%= @waypoints %>" ></div>
