<div class="container">

    <h2 class="pb-3 mt-3">Ajouter un itinéraire</h2>

    <div class="form-inputs">
      <%= simple_form_for @itinerary do |f| %>
        <%= f.input :name,
                    required: true,
                    label: 'Nom'%>
        <%= f.input :description,
                    required: true,
                    label: 'Description'%>
        <%= f.input :duration,
                    label: 'Durée'%>
        <%= f.input :elevation,
                    label: 'Dénivelé'%>
        <%= f.input :departure,
                    label: 'Point de départ' %>
        <%= f.input :arrival,
                    label: "Point d'arrivée" %>
        <%= f.input :ascent_difficulty,
                    label: "Niveau de difficulté randonnée"%>
        <%= f.input :ski_difficulty,
                    label: "Niveau de difficulté à ski"%>
        <%= f.input :mountain, collection: Mountain.all,
                    label: "Massif"%>
        <%= f.input :photos, as: :file, input_html: { multiple: true },
                    label: "Photos" %>
        <p>Coordonnées au format GPX</p>
        <%= f.file_field :gpx_coordinates,
                    label: "Coordonnées GPX" %>

    </div>

    <div class="form-actions">
      <%= f.button :submit, "Valider", class: "btn btn-primary my-3" %>
      <%= link_to 'Annuler', home_path, class: "btn btn-primary" %>
    </div>

    <% end %>
</div>
